{{#each posts as |post| }} 
<div class="mb-4 card text-center">
  <div class="card-header">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p class="author">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="card-body">
    <p class="pre-line">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
