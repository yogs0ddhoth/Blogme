<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Post:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Posts:</h3>

    {{#each posts as |post|}}
    {{!-- <div class="col-mb-2 card"> --}}
      <div class="col-md-8 card-2">
        <h4 class="card-header"><a href="/post/{{post.id}}" class="card-link">{{post.name}}</a></h4>
        <textarea class="card-body pre-line">{{post.description}}</textarea>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      
    {{!-- </div> --}}
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
